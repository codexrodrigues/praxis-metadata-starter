  "definitions": {
    "optionItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "value": {},
        "label": { "type": "string" },
        "disabled": { "type": "boolean" },
        "group": { "type": "string" }
      },
      "required": ["value", "label"]
    }
